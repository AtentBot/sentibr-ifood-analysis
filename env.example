# ============================================
# SENTIBR - Environment Variables
# ============================================

# Project
PROJECT_NAME=SentiBR
VERSION=1.0.0
ENVIRONMENT=development

# Paths
MODEL_PATH=models/bert_finetuned
DATA_PATH=data
LOGS_PATH=logs

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Frontend Configuration
STREAMLIT_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Model Configuration
MODEL_NAME=neuralmind/bert-base-portuguese-cased
MAX_LENGTH=512
BATCH_SIZE=16
NUM_LABELS=3

# Training Configuration
LEARNING_RATE=2e-5
NUM_EPOCHS=3
WARMUP_STEPS=500
WEIGHT_DECAY=0.01
SEED=42

# MLflow
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_EXPERIMENT_NAME=sentibr-sentiment-analysis

# OpenAI API (for LLM evaluation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.0

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Redis Cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL (optional - for logs)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sentibr
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Drift Detection
DRIFT_CHECK_INTERVAL=3600
DRIFT_THRESHOLD=0.05

# Ngrok (for public access)
NGROK_AUTH_TOKEN=your_ngrok_token_here

# Dataset
DATASET_NAME=ifood_reviews
TRAIN_SPLIT=0.7
VAL_SPLIT=0.15
TEST_SPLIT=0.15
