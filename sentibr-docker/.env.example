# ============================================
# SentiBR - Environment Variables
# Copy this file to .env and fill with your values
# ============================================

# ==========================================
# Application
# ==========================================
ENVIRONMENT=production
LOG_LEVEL=INFO
PROJECT_NAME=SentiBR
VERSION=1.0.0

# ==========================================
# Database (PostgreSQL)
# ==========================================
POSTGRES_DB=sentibr
POSTGRES_USER=sentibr_user
POSTGRES_PASSWORD=sentibr_password_2024
DATABASE_URL=postgresql://sentibr_user:sentibr_password_2024@postgres:5432/sentibr

# ==========================================
# Redis
# ==========================================
REDIS_PASSWORD=sentibr_redis_2024
REDIS_URL=redis://:sentibr_redis_2024@redis:6379/0
CACHE_TTL=3600

# ==========================================
# MLflow
# ==========================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=sentibr_experiments

# ==========================================
# OpenAI API
# ==========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.0

# ==========================================
# Model Configuration
# ==========================================
MODEL_NAME=neuralmind/bert-base-portuguese-cased
MAX_LENGTH=512
NUM_LABELS=3
BATCH_SIZE=16

# ==========================================
# API Configuration
# ==========================================
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4
RELOAD=false

# ==========================================
# Frontend Configuration
# ==========================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# ==========================================
# Grafana
# ==========================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=sentibr_grafana_2024

# ==========================================
# Training Configuration
# ==========================================
LEARNING_RATE=2e-5
NUM_EPOCHS=3
WARMUP_STEPS=500
WEIGHT_DECAY=0.01
SEED=42

TRAIN_SPLIT=0.7
VAL_SPLIT=0.15
TEST_SPLIT=0.15

# ==========================================
# Monitoring & Alerting
# ==========================================
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

ENABLE_GRAFANA=true
GRAFANA_PORT=3000

# ==========================================
# Security (Production)
# ==========================================
# SECRET_KEY=your_secret_key_here
# JWT_SECRET=your_jwt_secret_here
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com
# CORS_ORIGINS=https://your-domain.com

# ==========================================
# Cloud Storage (Optional)
# ==========================================
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=sentibr-models
# AWS_REGION=us-east-1

# ==========================================
# Feature Flags
# ==========================================
ENABLE_GPT_COMPARISON=true
ENABLE_EXPLAINABILITY=true
ENABLE_BATCH_PREDICTION=true
ENABLE_DRIFT_DETECTION=true

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==========================================
# Logging
# ==========================================
LOG_FORMAT=json
LOG_FILE=/app/logs/sentibr.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
