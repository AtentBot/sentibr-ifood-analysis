{
  "dashboard": {
    "title": "SentiBR - Monitoramento Geral",
    "tags": ["sentibr", "api", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "API - Requests por Segundo",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "API - Latência Média (ms)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_sum[1m]) / rate(http_request_duration_seconds_count[1m]) * 1000",
            "legendFormat": "Latência"
          }
        ]
      },
      {
        "id": 3,
        "title": "Total de Predições",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(predictions_total)"
          }
        ]
      },
      {
        "id": 4,
        "title": "Acurácia do Modelo (%)",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "model_accuracy * 100"
          }
        ]
      },
      {
        "id": 5,
        "title": "Uso de Memória (%)",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1e9"
          }
        ]
      },
      {
        "id": 6,
        "title": "Uso de CPU (%)",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[1m]) * 100"
          }
        ]
      },
      {
        "id": 7,
        "title": "Distribuição de Sentimentos",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "predictions_by_sentiment"
          }
        ]
      },
      {
        "id": 8,
        "title": "Tempo de Inferência BERT (ms)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(bert_inference_duration_seconds_sum[1m]) / rate(bert_inference_duration_seconds_count[1m]) * 1000",
            "legendFormat": "Tempo médio"
          }
        ]
      },
      {
        "id": 9,
        "title": "Erros HTTP (últimos 5min)",
        "type": "graph",
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 10,
        "title": "Cache Redis - Hit Rate (%)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 26},
        "targets": [
          {
            "expr": "(redis_cache_hits / (redis_cache_hits + redis_cache_misses)) * 100"
          }
        ]
      },
      {
        "id": 11,
        "title": "Conexões PostgreSQL",
        "type": "graph",
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 26},
        "targets": [
          {
            "expr": "pg_stat_activity_count"
          }
        ]
      },
      {
        "id": 12,
        "title": "Status dos Serviços",
        "type": "table",
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 26},
        "targets": [
          {
            "expr": "up",
            "format": "table"
          }
        ]
      }
    ]
  },
  "overwrite": true
}
